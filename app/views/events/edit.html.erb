<h1>Редактирование события</h1>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= render 'form' %>

    <% if @event.user == current_user %>
      <div class="question-actions">
        <%= link_to 'Удалить событие', event_path(@event), class: 'btn btn-danger buffer-both',
                    method: :delete, data: {confirm: t('questions.del_question_confirm?')} %>
      </div>
    <% end %>
  </div>
</div>