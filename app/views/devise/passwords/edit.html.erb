<h2><%= t"change_pass.change" %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="container">
    <div class="row">
      <div class="form-group col-xs-4">
        <%= f.label t"change_pass.new" %><br/>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t"change_pass.chars" %>)</em><br/>
        <% end %>
        <%= f.password_field :password, autofocus: true,
                             autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-4">
        <%= f.label t"change_pass.corfirm" %><br/>
        <%= f.password_field :password_confirmation,
                             autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit t('change_pass.fix_change'), :class => 'btn btn-primary' %>
    </div>
<% end %>
<div class=" form-group buffer-both">
<%= render "devise/shared/links" %>
</div>
</div>